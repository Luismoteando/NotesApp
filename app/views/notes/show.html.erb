<div class="wrapper_with_padding">
  <div id="note_show">
    <h1 class="title">
      <%= @note.title %>
    </h1>
    <p>
      <%= simple_format(@note.content) %>
    </p>
    <% if @note.image.exists? %>
    <%= image_tag @note.image.url(:medium) %><br/>
    <% end %>
    <% if @note.user_id == current_user.id || current_user.admin? %>
    <div class="buttons">
      <%= link_to "Edit", edit_note_path(@note), class: "button" %>
      <%= link_to "Delete", note_path(@note), method: :delete, data: { confirm: "Are you sure?" }, class: "button" %>
    </div>
    <% end %>
  </div>
</div>
