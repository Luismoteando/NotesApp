<div class=wrapper_with_padding>
  <h1>
    <%= "Edit your collection" %>
  </h1>
  <div class="clearfix" id="notes">
    <% unless @notes.blank? %>
    <% @notes.each do |note| %>
    <a href="<%= (url_for [note]) %>">
      <div class="note">
        <p class="title">
          <%= note.title %>
        </p></br>
        <button>
          <%= link_to "Add", fill_collection_path(collection_id: @collection.id, note_id: note.id), method: "put" %>
        </button></br></br>
        <p class="date">
          <%= time_ago_in_words(note.created_at) %>
        </p>
      </div>
    </a>
    <% end %>
    <% else %>
    <h2>Add a new note</h2>
    <p>It seems that you haven't created any note. Would you like to?</p>
    <button>
      <%= link_to "New Note", new_note_path %>
    </button>
    <% end %>
  </div>
  <%= render 'form' %>
  <%= link_to "Cancel", collection_path %>
</div>
