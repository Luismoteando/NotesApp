<div class=wrapper_with_padding>
  <h1>
    Add a new collection
  </h1>
  <%= render 'form' %>
  <% @notes.each do |note| %>
    <a href="<%= (url_for [note]) %>">
      <div class="note">
        <p class="title">
          <%= note.title %>
        </p>
        <p class="date">
          <%= time_ago_in_words(note.created_at) %>
        </p>
      </div>
    </a>
  <% end %>
</div>
